/**index.wxss**/
page {
  height: 100vh;
  background: linear-gradient(180deg, #faf8f5 0%, #f5f3f0 100%);
  overflow: hidden;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 主界面 */
.main-content {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 可滚动内容区域 */
.scroll-content {
  flex: 1;
  height: 0;
  padding: 0 30rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

.header {
  text-align: center;
  padding: 8rpx 0 16rpx;
  flex-shrink: 0;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.2;
}

/* 表单容器 */
.form-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  margin-top: 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-picker {
  width: 100%;
}

.picker-text {
  display: block;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.calc-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 10rpx;
  margin-top: 16rpx;
  border: none;
}

.calc-btn::after {
  border: none;
}

.test-btn {
  width: 100%;
  height: 64rpx;
  background: #e8e8e8;
  color: #666;
  font-size: 24rpx;
  border-radius: 10rpx;
  margin-top: 16rpx;
  border: none;
}

.test-btn::after {
  border: none;
}

/* 错误提示 */
.error-msg {
  background: #fff5f5;
  border: 1rpx solid #ffcccc;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  margin-top: 0;
  color: #ff4444;
  font-size: 26rpx;
}

/* 结果显示 */
.result-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.result-header {
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.bazi-display {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #f8f8f8 0%, #fff 100%);
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.bazi-main {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b35;
  letter-spacing: 8rpx;
}

.bazi-details {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.bazi-item {
  flex: 1;
  min-width: 45%;
  background: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
}

.bazi-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.bazi-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.input-info {
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  font-size: 24rpx;
  color: #999;
}

.info-label {
  color: #666;
}

.info-text {
  color: #333;
  margin-left: 10rpx;
}

/* 测试面板 */
.test-panel {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.test-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.test-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  height: 50rpx;
  padding: 0 20rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  border-radius: 8rpx;
  line-height: 50rpx;
  border: none;
}

.close-btn::after {
  border: none;
}

.test-content {
  max-height: 80vh;
}

.test-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.test-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.test-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.test-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.test-status.success {
  background: #d4edda;
  color: #155724;
}

.test-status.error {
  background: #f8d7da;
  color: #721c24;
}

.test-result {
  margin-top: 15rpx;
}

.test-result .bazi-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
  margin-bottom: 15rpx;
  text-align: center;
}

.test-result .bazi-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.test-error {
  margin-top: 15rpx;
  color: #ff4444;
  font-size: 24rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: #fff;
  font-weight: bold;
}

.action-btn.secondary {
  background: #e8e8e8;
  color: #666;
}

.action-btn::after {
  border: none;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.import-modal {
  max-width: 700rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  width: 48rpx;
  height: 48rpx;
  text-align: center;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.prompt-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

.import-tip {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.import-textarea {
  width: 100%;
  min-height: 400rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.import-hint {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 15rpx;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: #fff;
  font-weight: bold;
}

.modal-btn.secondary {
  background: #e8e8e8;
  color: #666;
  font-weight: normal;
}

.modal-btn::after {
  border: none;
}

/* 免责声明 */
.disclaimer {
  margin: 40rpx 30rpx;
  padding: 20rpx;
  background: rgba(255, 200, 100, 0.1);
  border-radius: 8rpx;
  border-left: 4rpx solid #ff6b35;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}
