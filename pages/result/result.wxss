/**result.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  padding: 20rpx 0 30rpx;
  color: #fff;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.back-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 0;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-placeholder {
  width: 100rpx;
}

/* 八字信息卡片 */
.bazi-card {
  background: #fff;
  margin: 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bazi-card-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.bazi-display {
  text-align: center;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #f8f8f8 0%, #fff 100%);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.bazi-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b35;
  letter-spacing: 8rpx;
}

.bazi-info {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 标签切换 */
.tabs {
  display: flex;
  background: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: #fff;
  font-weight: bold;
}

/* 报告容器 */
.report-container {
  padding: 0 30rpx;
}

.report-section {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-toggle {
  font-size: 24rpx;
  color: #999;
}

.section-content {
  padding: 30rpx;
}

.section-text {
  font-size: 28rpx;
  line-height: 2;
  color: #666;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 图表容器 */
.chart-container {
  padding: 30rpx;
}

.chart-wrapper {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.kline-canvas {
  width: 100%;
  border-radius: 10rpx;
}

.chart-legend {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
  margin-top: 30rpx;
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
}

.legend-hint {
  font-size: 22rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 数据点详情弹窗 */
.point-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.point-detail-content {
  width: 80%;
  max-width: 500rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.point-detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: #fff;
}

.point-detail-title {
  font-size: 32rpx;
  font-weight: bold;
}

.point-detail-close {
  font-size: 48rpx;
  line-height: 1;
  width: 48rpx;
  height: 48rpx;
  text-align: center;
}

.point-detail-body {
  padding: 30rpx;
}

.point-detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.point-detail-item:last-child {
  border-bottom: none;
}

.point-label {
  font-size: 28rpx;
  color: #666;
}

.point-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.point-value.score-up {
  color: #26a69a;
}

.point-value.score-down {
  color: #ef5350;
}

.point-value.score-flat {
  color: #999;
}
