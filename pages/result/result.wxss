/**result.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  padding: 20rpx 0 30rpx;
  color: #fff;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.back-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 0;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-placeholder {
  width: 100rpx;
}

/* 八字信息卡片 */
.bazi-card {
  background: #fff;
  margin: 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bazi-card-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.bazi-display {
  text-align: center;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #f8f8f8 0%, #fff 100%);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.bazi-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b35;
  letter-spacing: 8rpx;
}

.bazi-info {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 标签切换 */
.tabs {
  display: flex;
  background: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: #fff;
  font-weight: bold;
}

/* 报告容器 */
.report-container {
  padding: 0 30rpx;
}

.report-section {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-toggle {
  font-size: 24rpx;
  color: #999;
}

.section-content {
  padding: 30rpx;
}

.section-text {
  font-size: 28rpx;
  line-height: 2;
  color: #666;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 图表容器 */
.chart-container {
  padding: 30rpx;
}

.chart-placeholder {
  background: #fff;
  border-radius: 20rpx;
  padding: 100rpx 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chart-tip {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.chart-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}
